#include<cstdio>
#include<iostream>

int main()
{
	int n;//어린이 수  
	int a[10000],d[10000];
	scanf("%d",&n);
	a[0] = 0;
	for(int i=1;i<=n;i++)
	{
		scanf("%d",&a[i]);
	}
	
	int answer = n;
	
	for(int i=1; i<=n; i++)
	{
		d[a[i]]=d[a[i]-1]+1;
		if(answer> n- d[a[i]])
		{
			answer= n - d[a[i]];
		}
	}
	
	printf("%d",answer);
	
}
#include<cstdio>
#include<algorithm>
using namespace std;

int n;//숫지판의 크기 
int a[10000];
int b[10000];
pair <int,int>res[2];

bool check(){
	for(int i=1;i<=n;i++)
	{
		if(a[i]!=i)
		{
			return false;
		}
	}
	return true;
}

bool process(int first,int last,int step)
{
	int cnt;
	for(int i=0;i!=last;i=i+step)
	{
		int s=0;
		int f=0;
		if(a[i]!=i)
		{
			s=i;
			for(int j=1;i<=n;j++)
			{
				if(a[j]==s)
				{
					f=j;
					break;
				}
			}
			
			reverse(a+min(s,f),a+max(s,f)+1);
			res[cnt]={ min(s,f), max(s,f) };
			cnt++;
			if(cnt>2)
			{
				return false;
			}
			if(check())
			{
				if (cnt==1)
				{
					printf("1 1\n");
				}
				for(int i=0;i<cnt;i++)
				{
					printf("%d %d\n",res[i].first,res[i].second);
				}
				return true;
			}
		}
	}
	return false;
}
int main()
{
	scanf("%d",&n);
	for(int i=1;i<=n;i++)
	{
		scanf("%d",&a[i]);
		b[i]=a[i];
	} 
	if(check())
	{
		printf("1 1\n");
		printf("1 1\n");
	}
	if(process(1,n,1))
	{
		return 0;
	}
	for(int i=1;i<=n;++i)
	{
		a[i]=b[i];
	}
	process(n,1,-1);
}
