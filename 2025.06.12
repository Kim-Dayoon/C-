#include<cstdio>
int main()
{
	int a[4], m[4];
	int max=0;
	int curr = 0;
	for(int i=0;i<4;i++)
	{
		scanf("%d %d",&a[i],&m[i]);
		
	}
	for (int i = 0; i < 4; i++)
	{
		curr = curr - a[i] + m[i];
		if (curr > max)
		{
			max = curr;
		}
	}
    printf("%d",max);
	
	
}
